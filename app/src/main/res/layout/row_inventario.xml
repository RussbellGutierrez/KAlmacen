<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:background="@drawable/cuerpo"
              android:padding="10dp"
              android:layout_width="540dp"
              android:layout_height="wrap_content"
              android:layout_margin="7dp" android:id="@+id/linear_inventario">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="99999"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_codigo"/>
                <TextView
                        android:text="GLORIA EVAPORADA NIÑOS DE 1 A 5 AÑOS 48UNI X 170GR"
                        android:textColor="@color/DarkGray"
                        android:background="@color/White"
                        android:textStyle="bold"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_descripcion"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/borde_icono"
                        app:srcCompat="@drawable/v_posicion" android:id="@+id/img_posicion"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/White"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/v_pallet"/>
                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/v_caja"/>
                <ImageView
                        android:layout_width="120dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/v_papas"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/White"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Stk/Sistema :"
                        android:textColor="@color/DarkGray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_ps"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_bs"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_us"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/White"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ln_ingresado">
                <TextView
                        android:text="Stk/Físico :"
                        android:textColor="@color/DarkGray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_pallet"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_bulto"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_unidad"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/White"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ln_diferencia">
                <TextView
                        android:text="Recuento :"
                        android:textColor="@color/DarkGray"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_pdif"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_bdif"/>
                <TextView
                        android:text="-+99999"
                        android:textColor="@color/DarkGray"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/txt_udif"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:orientation="vertical" android:id="@+id/linear_ubicacion">

        <TextView
                android:text="ZONA - PABELLON - FILA - COLUMNA"
                android:textColor="@color/White"
                android:background="#4891C2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginTop="5dp"
                android:background="@color/White"
                app:justifyContent="center" android:id="@+id/flex_ubicacion">

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

</LinearLayout>