<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#fff"
        android:layout_width="500dp"
        android:layout_height="wrap_content" android:id="@+id/card_conteo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

        <TextView
                android:text="1079 - GLORIA EVAPORADA NIÑOS DE 1 A 5 AÑOS 48UNI X 170GR"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Sistema"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Físico"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Diferencia"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:weightSum="3"
                    android:orientation="vertical">

                <TextView
                        android:text="PALLET"
                        android:gravity="center_vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:text="BULTO"
                        android:gravity="center_vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                <TextView
                        android:text="UNIDAD"
                        android:gravity="center_vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:weightSum="3"
                    android:orientation="vertical">

                <TextView
                        android:text="3"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_sp"/>

                <TextView
                        android:text="50"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_sb"/>

                <TextView
                        android:text="70"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_su"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:weightSum="3"
                    android:orientation="vertical">

                <EditText
                        android:textSize="20sp"
                        android:hint="3"
                        android:gravity="center"
                        android:textColor="@color/DarkGray"
                        android:inputType="number"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/edt_cp"/>

                <EditText
                        android:textSize="20sp"
                        android:hint="50"
                        android:gravity="center"
                        android:textColor="@color/DarkGray"
                        android:inputType="number"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/edt_cb"/>

                <EditText
                        android:textSize="20sp"
                        android:hint="70"
                        android:gravity="center"
                        android:textColor="@color/DarkGray"
                        android:inputType="number"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/edt_cu"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:weightSum="3"
                    android:orientation="vertical">

                <TextView
                        android:text="1"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_dp"/>

                <TextView
                        android:text="27"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_db"/>

                <TextView
                        android:text="20"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:id="@+id/txt_du"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal" >

            <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="#970e3a" android:id="@+id/btn_cancelar"/>

            <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Editar"
                    android:textColor="#bd7500" android:id="@+id/btn_editar"/>

            <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textColor="#0294c9" android:id="@+id/btn_guardar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>