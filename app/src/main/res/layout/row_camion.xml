<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/Azure" android:id="@+id/card_camion">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="999"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_camion"/>
            <TextView
                    android:text="MOGOLLON TRUJILLO ROSMEL"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_camionero"/>
            <ImageView
                    android:layout_marginTop="5dp"
                    android:tint="@color/Black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" app:srcCompat="@drawable/v_camion" android:id="@+id/imageView"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>